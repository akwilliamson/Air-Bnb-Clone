<%= image_tag @user.avatar.url :medium %>
<h3>Your existin listins</h3>
<ul>
  <% @user.listings.each do |listing| %>
    <li class="listing"> <%= image_tag listing.photo.url(:small) %>
      <%= listing.address %> | <%= listing.description %> | <%= link_to "Edit Listing", edit_listing_path(listing)%></li>
  <% end %>
</ul>
<%= link_to "Post new Listing", new_listing_path, class: 'btn btn-alert' %>
<br>
<%= link_to "Edit Profile", edit_user_registration_path(current_user), class: 'btn btn-primary btn-sm'%>
<h3> Past Stays </h3>
<ul>

  <% @past_bookings.each do |booking| %>
   <li> <strong>From: </strong><%= booking.start_date %> <strong>to: </strong><%= booking.end_date %> <strong>at </strong><%= booking.listing.address %> </li>
   <% if booking.rating %>
    <% booking.rating.times do |s| %>
     <%= image_tag "star-on.png" %>

    <% end %>
   <% else %>
    <% (1..5).to_a.each do |s| %>
      <%= image_tag "star-off.png", class: "rating", id: s %>
    <% end %>

   <% end %>
  <% end %>
</ul>
